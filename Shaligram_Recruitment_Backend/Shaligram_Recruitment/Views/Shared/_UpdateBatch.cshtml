@model Shaligram_Recruitment.Model.ViewModels.CollegeBatch.CollegeBatchModel

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="BatchId" class="control-label"></label>
                <input asp-for="BatchId" class="form-control" />
                <span asp-validation-for="BatchId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CollegeName" class="control-label"></label>
                <select asp-for="CollegeName" class="form-control" asp-items="ViewBag.CollegeName">
                    <option value="">-- Select College --</option> 
                </select>
                <span asp-validation-for="CollegeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Years" class="control-label"></label>
                <input asp-for="Years" class="form-control" />
                <span asp-validation-for="Years" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BatchName" class="control-label"></label>
                <input asp-for="BatchName" class="form-control" />
                <span asp-validation-for="BatchName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100" style="background: linear-gradient(90deg, #1C73AA 0%, #123953 100%);">Update Batch</button>
            </div>
        </form>
    </div>
</div>



