                            text: response.message,
                            confirmButtonColor: '#3085d6',
                            confirmButtonText: 'OK'
                        });
                    }
                    $('#uploadFileModel').modal('show');
                }
            },
            error: function (error) {
                console.error('Error adding student:', error);
            }
        });
    };

   
</script>