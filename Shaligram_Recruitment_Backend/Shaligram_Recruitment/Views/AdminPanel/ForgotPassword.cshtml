@model Shaligram_Recruitment.Model.ViewModels.ForgotPasswordModel

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_SignInLayout.cshtml";
}
<style>
    .colored-toast.swal2-icon-error {
        background-color: #f27474 !important;
    }  
</style>
<div class="card-body p-md-5 mx-md-4 col-sm-12 response ">
    <div class="text-center">
        <img src="~/img/Vector.png"
             alt="logo">
        <h4 class="mt-1 mb-5 pb-1">Recruitment</h4>
    </div>

    <form method="post">
        <h4 class="text-center">Forgot Password?</h4>
        <p>No worries, we’ll send you reset instructions.</p>

        <div class="form-group">
            <label asp-for="Email" class="mb-3 mt-3">
                <span class="fw-bold ">Email Address</span>
                <span class="text-danger" style="margin-left: 8px;">*</span>
            </label>
            <input asp-for="Email" type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Enter your Email ID">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">           
            <button type="submit" id="form2Example22" class="btn p-2 mt-4 w-100 text-light mb-3" style="background: linear-gradient(90deg, #1C73AA 0%, #123953 100%);">
                Reset Password
            </button>
        </div>
        <div class="form-group text-center mt-1">
        @Html.ActionLink(
                 "<- Back to Login",
                 "SignIn",
                 "AdminPanel", 
                 null,
                 htmlAttributes: new { @class = "m-2 text-center text-dark text-decoration-none", style = "color: #7B8185;" }
                 )
        </div>

    </form>

</div>
@if (TempData["Error"] != null)
{
    <script>
        const Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            iconColor: 'white',
            customClass: {
                popup: 'colored-toast'
            },
            didOpen: (toast) => {
                toast.addEventListener('mouseenter', Swal.stopTimer)
                toast.addEventListener('mouseleave', Swal.resumeTimer)
            }
        })

        Toast.fire({
            title: '@TempData["Error"]',
            icon: 'error',
        })
    </script>
}



